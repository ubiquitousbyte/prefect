# Run tests
test:
    uv run pytest

# Generate API reference documentation for prefect-nomad
api-ref:
    #!/usr/bin/env bash
    REPO_ROOT="$(git rev-parse --show-toplevel)"
    cd "$REPO_ROOT"
    uvx --with-editable ./src/integrations/prefect-nomad \
        --python 3.12 \
        --isolated \
        mdxify \
        --all \
        --root-module prefect_nomad \
        --output-dir docs/integrations/prefect-nomad/api-ref \
        --anchor-name "SDK Reference" \
        --repo-url https://github.com/PrefectHQ/prefect \
        --include-inheritance
